<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controller.InboxController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="MailClient" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
            <Label fx:id="userLabel" text="Account: ..." style="-fx-text-fill: #bdc3c7;" />
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.4" style="-fx-background-color: transparent;">
            <AnchorPane>
                <TableView fx:id="emailTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="senderCol" text="Mittente" />
                        <TableColumn fx:id="subjectCol" text="Oggetto" />
                        <TableColumn fx:id="dateCol" text="Data" />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                    <placeholder><Label text="Nessuna mail ricevuta" style="-fx-text-fill: #95a5a6;"/></placeholder>
                </TableView>
            </AnchorPane>

            <AnchorPane style="-fx-background-color: white;">
                <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                    <Label fx:id="selectedSubjectLabel" text="Seleziona una mail" styleClass="lbl-header" wrapText="true"/>

                    <VBox spacing="2.0">
                        <Label fx:id="selectedSenderLabel" text="Da: -" style="-fx-text-fill: #7f8c8d;" />
                        <Label fx:id="selectedDateLabel" text="Data: -" style="-fx-text-fill: #7f8c8d;" />
                    </VBox>

                    <HBox spacing="10.0">
                        <Button fx:id="replyBtn" onAction="#onReplyAction" text="Rispondi" disable="true" styleClass="button, btn-primary"/>
                        <Button fx:id="replyAllBtn" onAction="#onReplyAllAction" text="Rispondi a tutti" disable="true" styleClass="button, btn-primary"/>
                        <Button fx:id="forwardBtn" onAction="#onForwardAction" text="Inoltra" disable="true" styleClass="button"/>
                    </HBox>

                    <TextArea fx:id="emailContentArea" editable="false" VBox.vgrow="ALWAYS" wrapText="true" />
                </VBox>
            </AnchorPane>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
            <Label fx:id="statusLabel" text="Connesso" styleClass="lbl-status-ok" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button onAction="#onRefreshAction" text="Aggiorna âŸ³" styleClass="button, btn-warning"/>
            <Button onAction="#onWriteAction" text="Scrivi Nuova âœŽ" styleClass="button, btn-success"/>
            <Button onAction="#onDeleteAction" text="Cancella ðŸ—‘" styleClass="button, btn-danger"/>
        </HBox>
    </bottom>
</BorderPane>