<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="400.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.controller.LoginController">

    <padding> <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /> </padding>

    <Label text="MailClient Accesso" styleClass="lbl-title" />

    <VBox spacing="5.0" maxWidth="340.0">
        <Label text="Indirizzo Email" style="-fx-text-fill: #7f8c8d;"/>
        <TextField fx:id="emailField" promptText="es. mario@test.it" />
    </VBox>

    <Button defaultButton="true" onAction="#onLoginButton"
            prefHeight="45.0" prefWidth="340.0"
            text="ACCEDI" styleClass="button, btn-primary" />

    <Label fx:id="errorLabel" styleClass="lbl-error" wrapText="true" />
</VBox>